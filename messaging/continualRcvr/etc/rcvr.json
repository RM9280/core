{
	//
	//	This configuration stands up a simple receiver node. It receives messages on the HTTP API and logs them.
	//

	"services":
	[
		// accounts
		{
			"name":"accounts",
			"classname":"io.continual.iam.impl.jsondoc.SimpleDocDbSvc",
			"db":
			{
				"users":
				{
					"testuser": { "enabled": true, "password": { "salt": "salt", "hash":"bc7aecf70a8a195ee5fe5b3d973e427b716107ee" } }	// password "test"
				}
			}
		},

		// basic http presence
		{
			"name":"httpService",
			"classname":"io.continual.restHttp.HttpService",

			"accountService": "accounts",

			"port":3170
		},

		// publisher
		{
			"name": "publisher",
			"classname": "io.continual.messaging.impl.LoggerPublisher",
		},

		// the receiver API
		{
			"name":"receiverApi",
			"classname":"io.continual.services.rcvr.ReceiverApiService",

			// the http service to present on
			"httpService":"httpService",

			// the accounts service
			"accounts": "accounts",

			// the publishing service
			"publisherService": "publisher"
		}
	]
}
